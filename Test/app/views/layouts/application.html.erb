<!DOCTYPE html>
<html>
  <head>
    <title>Test</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <div id="user_nav">
        <% if signed_in? %>
          Welcome <%= session[:username] %>!
          <%= link_to "ログアウト", "/signout" %>
        <% else %>
          <%= link_to "ログイン", "/auth/twitter" %>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
